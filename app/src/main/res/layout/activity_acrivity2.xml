<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Какого цвета ты носишь трусы?"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="45sp" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_margin="5dp"
            android:background="@drawable/dsds"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:duplicateParentState="false"
            android:text="Розового"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#89F800FF"
            android:textSize="36sp" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_margin="5dp"
            android:background="@drawable/dsds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:duplicateParentState="false"
            android:text="Голубого"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/textFirst"
            android:textSize="36sp" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_margin="5dp"
            android:background="@drawable/dsds"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:duplicateParentState="false"
            android:text="Черного"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#000000"
            android:textSize="36sp" />

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/dsds"
            android:duplicateParentState="false"
            android:text="Я натурал"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#3A4FB7"
            android:textSize="36sp" />

        <Button
            android:id="@+id/button2"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="132dp"
            android:layout_height="64dp"
            android:layout_marginLeft="33dp"
            android:background="@drawable/porn"
            android:text="Нажми на меня"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="TextView"
            android:textColor="#00E2FF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:max="100"
            android:progress="50" />

    </LinearLayout>

</RelativeLayout>